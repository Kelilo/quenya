{
    "components": {
        "parameters": {
            "cursor": {
                "description": "cursor for next page",
                "in": "header",
                "name": "X-Cursor",
                "required": true,
                "schema": {
                    "type": "string"
                }
            },
            "filter": {
                "description": "filter type:\n  * `all`: default, show all items\n  * `active`: show active todo items\n  * `completed`: show completed todo items\n",
                "in": "query",
                "name": "filter",
                "schema": {
                    "default": "all",
                    "enum": [
                        "all",
                        "active",
                        "completed"
                    ],
                    "type": "string"
                }
            },
            "limit": {
                "description": "how many items to return at one time * default: 10 * min: 10 * max: 100\n",
                "in": "query",
                "name": "limit",
                "required": false,
                "schema": {
                    "default": 10,
                    "format": "int32",
                    "maximum": 100,
                    "minimum": 10,
                    "type": "integer"
                }
            }
        },
        "responses": {
            "Error": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                },
                "description": "unexpected error"
            },
            "Todo": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Todo"
                        }
                    }
                },
                "description": "a single todo item"
            },
            "Todos": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Todos"
                        }
                    }
                },
                "description": "a paged array of todo items",
                "headers": {
                    "X-Cursor": {
                        "$ref": "#/components/parameters/cursor"
                    }
                }
            }
        },
        "schemas": {
            "Error": {
                "properties": {
                    "code": {
                        "format": "int32",
                        "type": "integer"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "message"
                ],
                "type": "object"
            },
            "Todo": {
                "example": {
                    "body": "hello world!",
                    "created": "2020-11-11T17:32:28Z",
                    "id": "16ba8d00-d44c-4f61-841f-2da8221091bc",
                    "status": "active",
                    "updated": "2020-11-11T19:32:28Z"
                },
                "properties": {
                    "body": {
                        "$ref": "#/components/schemas/todoBody"
                    },
                    "created": {
                        "$ref": "#/components/schemas/dateTime"
                    },
                    "id": {
                        "$ref": "#/components/schemas/todoId"
                    },
                    "status": {
                        "$ref": "#/components/schemas/status"
                    },
                    "updated": {
                        "$ref": "#/components/schemas/dateTime"
                    }
                },
                "required": [
                    "body"
                ],
                "type": "object"
            },
            "Todos": {
                "items": {
                    "$ref": "#/components/schemas/Todo"
                },
                "type": "array"
            },
            "dateTime": {
                "format": "date-time",
                "type": "string"
            },
            "status": {
                "enum": [
                    "active",
                    "completed"
                ],
                "type": "string"
            },
            "todoBody": {
                "maxLength": 140,
                "minLength": 3,
                "type": "string"
            },
            "todoId": {
                "format": "uuid",
                "type": "string"
            }
        },
        "securitySchemes": {
            "token": {
                "bearerFormat": "JWT",
                "scheme": "bearer",
                "type": "http"
            }
        }
    },
    "info": {
        "description": "Hello world! This is a __Sample API__ for todo API\n",
        "title": "Todo API",
        "version": "0.1.0"
    },
    "openapi": "3.0.0",
    "paths": {
        "/todo/{todoId}": {
            "delete": {
                "description": "delete a todo item",
                "operationId": "deleteTodo",
                "responses": {
                    "204": {
                        "description": "No content"
                    },
                    "default": {
                        "$ref": "#/components/responses/Error"
                    }
                },
                "tags": [
                    "todo"
                ]
            },
            "get": {
                "description": "get a todo item",
                "operationId": "getTodo",
                "parameters": [
                    {
                        "description": "The id of the pet to retrieve",
                        "in": "path",
                        "name": "todoId",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/todoId"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/Todo"
                    },
                    "default": {
                        "$ref": "#/components/responses/Error"
                    }
                },
                "tags": [
                    "todo"
                ],
                "x-services": [
                    {
                        "name": "GetTodo"
                    }
                ]
            },
            "patch": {
                "description": "update todo status",
                "operationId": "updateTodo",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "status": {
                                        "$ref": "#/components/schemas/status"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    },
                    "description": "todo item status",
                    "required": true
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/Todo"
                    },
                    "default": {
                        "$ref": "#/components/responses/Error"
                    }
                },
                "tags": [
                    "todo"
                ]
            }
        },
        "/todos": {
            "get": {
                "description": "returns a list of todo items.",
                "operationId": "listTodos",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/limit"
                    },
                    {
                        "$ref": "#/components/parameters/filter"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/Todos"
                    },
                    "default": {
                        "$ref": "#/components/responses/Error"
                    }
                },
                "tags": [
                    "todos"
                ]
            },
            "post": {
                "description": "create a new todo item",
                "operationId": "createTodo",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "example": {
                                "body": "hello world"
                            },
                            "schema": {
                                "$ref": "#/components/schemas/Todo"
                            }
                        }
                    },
                    "description": "todo item to be posted",
                    "required": true
                },
                "responses": {
                    "201": {
                        "$ref": "#/components/responses/Todo"
                    },
                    "default": {
                        "$ref": "#/components/responses/Error"
                    }
                },
                "tags": [
                    "todos"
                ]
            }
        }
    },
    "servers": [
        {
            "description": "Production server",
            "url": "https://api.todo.mvc/v1"
        },
        {
            "description": "Local dev server",
            "url": "http://localhost:4000/api/v1"
        }
    ],
    "tags": [
        {
            "name": "todos"
        },
        {
            "name": "todo"
        }
    ]
}
